	body {
		background: url("/background.webp") no-repeat center center fixed;
		background-size: cover;
	}
	.btn {
		@apply text-sky-500 transition ease-in-out hover:-translate-y-1 hover:bg-sky-500 hover:text-white border-2 border-sky-500 rounded-full py-2 px-4 font-bold;
	}
</style>
