---
interface Props {
  ariaLabel: string;
  href: string;
  title?: string;
  floats?: boolean;
  navbarHide?: boolean;
}

const {
  ariaLabel,
  href,
  floats = true,
  title = "",
  navbarHide = false,
} = Astro.props;
---

<a
  class:list={[
    navbarHide ? "hidden md:block" : "",
    floats ? "hover:-translate-y-1" : "",
    "transition group ease-in-out hover:text-sky-500",
  ]}
  aria-label={ariaLabel}
  href={href}
  target="_blank"
>
  <slot />
  {title ? <span class="hidden md:inline">{title}</span> : null}
</a>
