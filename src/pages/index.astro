---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout>
  <main class="md:px-0 px-2">
    <h1 class="text-xl mb-3 font-jetbrainsMono">Hi my name is</h1>
    <h2 class="font-poppins text-5xl font-bold md:text-6xl">Hamza Rashid</h2>
    <p class="my-3 sm:w-[35rem] md:leading-9 text-xl md:text-2xl">
      A dedicated <span class="font-medium font-poppins underline"
        >Linux Enthusiast,</span
      > seamlessly blending the artisty of <span
        class="font-poppins font-medium underline">Web Development</span
      > with the precision of open-source mastery
    </p>
    <div class="flex mt-5 gap-4">
      <a aria-label="Discord Link" href="https://discord.com/users/hamza12700">
        <Icon class="cursor-pointer" name="ic:baseline-discord" /></a
      >
      <a aria-label="Twitter Link" href="https://twitter.com/Hamza_Rash1d">
        <Icon class="cursor-pointer" name="mdi:twitter" />
      </a>
      <a aria-label="Github Link" href="http://github.com/hamza12700">
        <Icon class="cursor-pointer" name="entypo-social:github" />
      </a>
    </div>
  </main>
</Layout>

<style>
  [astro-icon] {
    color: #626262;
    fill: #626262;
    width: 2.3rem;
  }

  h1 {
    text-shadow: -1px 6px 5px rgba(0, 0, 0, 0.31);
  }

  h2 {
    text-shadow: -1px 5px 5px rgba(0, 0, 0, 0.2);
  }

  p {
    text-shadow: -1px 5px 5px rgba(0, 0, 0, 0.2);
  }
</style>
